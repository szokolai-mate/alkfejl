{% extends "layout" %}

{% block content %}

<div class="content">
<div class="container">

<div>
<form action="/search" method="post" id="searchform">
    {{ csrfField }}
<input type="text" placeholder="Search" name="searchterm" size="10" id="searchterm">
<input type="submit" value="Search" class="button search" id="searchbutton">
</form>
</div>
<br>

<ul class="list projectlist" id="#projectlist">
{% for project in projects %}
     <li class="list-item">
     <div class=" {% if currentUser.id==project.ownerID %} own-item {% endif %}">
     <a href="/show/{{ project.id }}">
     <div class="name">
     {{ project.title }}
     </div>
     </a>
     <div class="description">
     {% for line in project.description %}
     {{ line }}
     <br>
     {% endfor %}
     </div>
     <div class="stats">
     <div class = "owner">
     <a href="/profile/{{ project.ownerID }}">{{ project.owner.displayName }}</a>
     </div>
     </div>
     </div>
     </li>
{% endfor %}
</ul>
</div>
</div>

<script src="scripts/search.js"></script>

{% endblock %}
