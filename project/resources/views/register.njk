{% extends "layout" %}

{% block content %}
<div id="form-container" class="content">
<h1>Join our collective!</h1>
<br>
<div class="form-container">
    <form id="registration-form"  method="post">
        {{ csrfField }}
        <label for="nickname">Nickname</label>
        <br>
        <input type="text" name="nickname" placeholder="Nickname" required value="{{ old('nickname') }}">
        <br>
        <label for="email">E-mail address</label>
        <br>
        <input type="text" name="email" placeholder="E-mail address" required value="{{ old('email') }}"> 
        <br>
        <label for="repeatemail">Repeat e-mail address</label>
        <br>
        <input type="text" name="repeatemail" placeholder="Repeat e-mail address" required value="{{ old('repeatemail') }}"> 
        <br>
        <label for="password">Password</label>
        <br>
        <input type="password" name="password" placeholder="Password" required> 
        <br>
        <label for="repeatpassword">Repeat password</label>
        <br>
        <input type="password" name="repeatpassword" placeholder="Repeat password" required>
        <br>
        <br>
        <label for="terms" class="visible">"I accept the terms and conditions." </label>
        <input type="checkbox" required name="terms"> 
        
        <br>
        <br>
        <input type="submit" value="Register" class="login button">
    </form>
</div>
{% if old('errors') %}
          <div class="error-container">
            <div class="panel-body">
              <ul>
                {% for error in old('errors') %}
                <li>{{ error.message }}</li>
                {% endfor %}
              </ul>
            </div>
          </div>
          {% endif %}    
</div>
{% endblock %}
